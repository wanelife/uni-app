{
	"easycom": {
			"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
		},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		}
	    ,{
            "path" : "pages/menu/menu",
            "style" :                                                                                    
            {
				"navigationBarBackgroundColor": "#c0133c",
				"navigationBarTextStyle": "white",
                "navigationBarTitleText": "全部分类"
            }
            
        }
        ,{
            "path" : "pages/mine/mine",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false
            }
            
        }
		
        ,{
            "path" : "pages/shopcart/shopcart",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "购物车",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/order/order",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "订单",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/goods-list/goods-list",
            "style" :                                                                                    
            {
                "navigationBarBackgroundColor": "#c0133c",
				"navigationBarTextStyle": "white",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/goods-detail/goods-detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
				"navigationStyle": "custom",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "components/StausBar/StausBar",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#7A7E83",
	    "selectedColor": "#bfbfbf",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "static/images/home-1.png",
	        "selectedIconPath": "./static/images/home.png",
	        "text": "首页"
	    }, {
	        "pagePath": "pages/menu/menu",
	        "iconPath": "static/images/menu-1.png",
	        "selectedIconPath": "static/images/menu.png",
	        "text": "分类"
	    },{
	        "pagePath": "pages/shopcart/shopcart",
	        "iconPath": "static/images/shopcart-1.png",
	        "selectedIconPath": "static/images/shopcart.png",
	        "text": "购物车"
	    },{
	        "pagePath": "pages/order/order",
	        "iconPath": "static/images/order-1.png",
	        "selectedIconPath": "static/images/order.png",
	        "text": "订单"
	    },{
	        "pagePath": "pages/mine/mine",
	        "iconPath": "static/images/mine-1.png",
	        "selectedIconPath": "static/images/mine.png",
	        "text": "我的"
	    }]
	}
}
